#!/usr/bin/perl
use strict;
use warnings;

print `
    (
        git ls-files --cached --others --exclude-standard \'*.norg\' &&
        git submodule foreach --recursive "
            git ls-files --cached --others --exclude-standard \'*.norg\'
	"
     ) | while read "REPLY"
        do
            echo "\$(stat --format="%Y" "\${REPLY}")"\$\'\t\'"\${REPLY}"
        done | sort -nr
`
