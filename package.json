{
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore --color",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore --color",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "storybook": "start-storybook --node-resolve --watch --open",
    "storybook:build": "build-storybook",
    "start:build": "cd dist && es-dev-server --open",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start": "es-dev-server --app-index index.html --node-resolve --open --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@open-wc/building-rollup": "^0.15.1",
    "@open-wc/demoing-storybook": "^1.0.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "babel-loader": "^8.0.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^1.0.0",
    "karma": ">=0.9",
    "lint-staged": "^8.0.0",
    "prettier": ">= 1.13.0",
    "react": "^16.8.0",
    "react-dom": "*",
    "react-is": "^16.8.0",
    "regenerator-runtime": "*",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "sinon": ">=4.0.0 <9.0.0",
    "vue": "^2.6.10",
    "webpack": ">=4"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "norg-app",
  "version": "0.0.0",
  "description": "Task outline organizing tool based on org-node",
  "author": "norg-app",
  "license": "MIT",
  "dependencies": {
    "@material/data-table": "^5.0.0",
    "@material/layout-grid": "^5.0.0",
    "@material/mwc-button": "^0.13.0",
    "@material/mwc-drawer": "^0.13.0",
    "@material/mwc-icon-button": "^0.13.0",
    "@material/mwc-top-app-bar-fixed": "^0.13.0",
    "axe-core": "^3.5.1",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "material-colors": "^1.2.6",
    "normalize.css": "^8.0.1"
  }
}
